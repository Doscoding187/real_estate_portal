# Environment Variables Template - Advertise With Us Landing Page
# Copy this file to .env.production and fill in the values

# =============================================================================
# APPLICATION
# =============================================================================
VITE_APP_NAME="Property Platform"
VITE_APP_URL="https://platform.com"
VITE_API_BASE_URL="https://api.platform.com"

# =============================================================================
# ANALYTICS
# =============================================================================
# Google Analytics 4 Measurement ID (format: G-XXXXXXXXXX)
VITE_ANALYTICS_ID="G-XXXXXXXXXX"
VITE_ANALYTICS_ENABLED="true"
VITE_ANALYTICS_DEBUG="false"

# Google Tag Manager Container ID (format: GTM-XXXXXXX)
VITE_GTM_ID="GTM-XXXXXXX"

# =============================================================================
# CMS (PAYLOAD CMS)
# =============================================================================
# Payload CMS API endpoint
VITE_CMS_API_URL="https://cms.platform.com/api"

# Payload CMS API key (generate in CMS admin)
VITE_CMS_API_KEY="your-cms-api-key-here"

# Enable/disable CMS integration
VITE_CMS_ENABLED="true"

# =============================================================================
# IMAGE CDN
# =============================================================================
# CDN URL for optimized images
VITE_IMAGE_CDN_URL="https://cdn.platform.com"

# Enable image optimization
VITE_IMAGE_OPTIMIZATION_ENABLED="true"

# =============================================================================
# ERROR MONITORING (SENTRY)
# =============================================================================
# Sentry DSN (format: https://xxxxx@sentry.io/xxxxx)
VITE_SENTRY_DSN="https://xxxxx@sentry.io/xxxxx"

# Environment name for Sentry
VITE_SENTRY_ENVIRONMENT="production"

# Enable/disable Sentry
VITE_SENTRY_ENABLED="true"

# Sample rate for performance monitoring (0.0 to 1.0)
VITE_SENTRY_TRACES_SAMPLE_RATE="0.1"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable CMS-driven content
VITE_FEATURE_CMS_CONTENT="true"

# Enable analytics tracking
VITE_FEATURE_ANALYTICS="true"

# Enable error monitoring
VITE_FEATURE_ERROR_MONITORING="true"

# Enable A/B testing (future)
VITE_FEATURE_AB_TESTING="false"

# =============================================================================
# PERFORMANCE
# =============================================================================
# Enable lazy loading for below-the-fold content
VITE_ENABLE_LAZY_LOADING="true"

# Enable code splitting
VITE_ENABLE_CODE_SPLITTING="true"

# Enable image optimization
VITE_ENABLE_IMAGE_OPTIMIZATION="true"

# Enable service worker (PWA)
VITE_ENABLE_SERVICE_WORKER="false"

# =============================================================================
# SEO
# =============================================================================
# Site name for meta tags
VITE_SITE_NAME="Property Platform"

# Site description for meta tags
VITE_SITE_DESCRIPTION="South Africa's leading property marketplace"

# Site logo URL for structured data
VITE_SITE_LOGO="https://platform.com/logo.png"

# Twitter handle for Twitter Card
VITE_TWITTER_HANDLE="@propertyplatform"

# =============================================================================
# SECURITY
# =============================================================================
# Content Security Policy (CSP) nonce
VITE_CSP_NONCE=""

# Enable HTTPS redirect
VITE_FORCE_HTTPS="true"

# =============================================================================
# DEVELOPMENT (set to false in production)
# =============================================================================
VITE_DEV_MODE="false"
VITE_SHOW_DEBUG_INFO="false"
VITE_MOCK_CMS_DATA="false"

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit this file with real values to version control
# 2. Use a secrets manager (AWS Secrets Manager, Vault) for sensitive values
# 3. Rotate API keys every 90 days
# 4. Restrict API key permissions to minimum required scope
# 5. Use different values for staging and production environments
